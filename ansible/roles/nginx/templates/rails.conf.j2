# nginx.conf

# Pumaにリクエストを転送するためのupstream設定
upstream app_server {
    server unix:/home/ec2-user/raisetech-live8-sample-app/tmp/sockets/puma.sock;  # Pumaのソケットファイルのパス
}

server {
    listen 80;  # HTTPのポート (通常80番)
    server_name {{ alb_dns }};  # サーバー名またはIPアドレス

    # Railsのルートディレクトリにあるpublicフォルダを指す
    root /home/ec2-user/raisetech-live8-sample-app/public;

    # デフォルトのエラーログパス
    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;

    # アプリケーションの場所（ルート）
    location / {
        proxy_pass http://app_server;  # Pumaサーバーにリクエストを転送
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Railsのアセットプリコンパイルしたファイルに対するキャッシュ制御
        access_log /var/log/nginx/access.log;
        error_log /var/log/nginx/error.log;

        try_files $uri/index.html $uri @app_server;  # 存在しない場合はPumaへ
    }

    # Pumaへのフォールバック処理
    location @app_server {
        proxy_pass http://app_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 静的ファイルのキャッシュコントロール
    location ~* \.(jpg|jpeg|gif|png|css|js|ico|svg|woff|ttf|eot|otf)$ {
        expires max;
        log_not_found off;
    }

    # エラーページのカスタマイズ (任意)
    error_page 500 502 503 504 /500.html;
    client_max_body_size 100m;  # アップロードファイルのサイズ制限
    keepalive_timeout 10;
}
